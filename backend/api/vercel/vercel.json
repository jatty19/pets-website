{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "BREVO_SMTP_USER": "@brevo_smtp_user",
    "BREVO_SMTP_KEY": "@brevo_smtp_key",
    "BREVO_SENDER_EMAIL": "@brevo_sender_email",
    "WEBSITE_URL": "@website_url"
  }
}